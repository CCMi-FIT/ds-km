{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "chapter",
    "properties": {
	"chapterid": {
	    "type": "integer",
	    "minimum": 1,
	    "maximum" : 7
	},
	"namespace": {
	    "type": "string"
	},
	"formatversion": {
	    "type": "integer",
	    "minimum": 1,
	    "maximum": 1
	},
	"title": {
	    "type": "string"
	},
	"text": {
	    "type": "string"
	},
	"questions": {
	    "type": "array",
	    "items": {
		"type": "object",
		"title": "question",
		"properties": {
		    "questionid": {
			"type": "integer",
			"minimum": 1
		    },
		    "references": {
			"type": "array",
			"items": {
			    "type": "object",
			    "title": "reference",
			    "properties": {
				"type": {
				    "type": "string",
				    "pattern": "^(expert|dmpbook)$"
				}
			    },
			    "required": ["type"]
			}
		    },
		    "type": {
			"type": "string",
			"pattern": "^(option|list|string|text)$"
		    },
		    "title": {
			"type": "string"		  
		    },
		    "answers": {
			"type": "array",
			"items": {
			    "type": "object",
			    "title": "answer",
			    "properties": {
				"id": {
				    "type": "integer",
				    "minimum": 0
				},
				"label": {
				    "type": "string"
				},
				"responsetype": {
				    "type": "string",
				    "pattern": "^(ok|advice|followup)$"
				}
			    },
			    "required": [
				"id",
				"label",
				"responsetype"
			    ]
			}
		    }
		},
		"required": [
		    "questionid"
		]
	    }
	}
    },
    "required": [
	"chapterid",
	"namespace",
	"formatversion",
	"questions"
    ]
}
