{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "chapter",
    "properties": {
	"chapterid": {
	    "type": "integer"
	},
	"namespace": {
	    "type": "string"
	},
	"formatversion": {
	    "type": "integer"
	},
	"title": {
	    "type": "string"
	},
	"text": {
	    "type": "string"
	},
	"questions": {
	    "type": "array",
	    "items": {
		"type": "object",
		"title": "question",
		"properties": {
		    "questionid": {
			"type": "integer"
		    },
		    "references": {
			"type": "array",
			"items": {
			    "type": "object",
			    "title": "reference",
			    "properties": {
				"type": { "type": "string" }
			    },
			    "required": ["type"]
			}
		    },
		    "type": {
			"type": "string"
		    },
		    "title": {
			"type": "string"		  
		    },
		    "answers": {
			"type": "array",
			"items": {
			    "type": "object",
			    "title": "answer",
			    "properties": {
				"id": {
				    "type": "integer"
				},
				"label": {
				    "type": "string"
				},
				"responsetype": {
				    "type": "string"
				}
			    },
			    "required": [
				"id",
				"label",
				"responsetype"
			    ]
			}
		    }
		},
		"required": [
		    "questionid"
		]
	    }
	}
    },
    "required": [
	"chapterid",
	"namespace",
	"formatversion",
	"questions"
    ]
}
